@model projectMVC.viewModel.SeetsViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Seet</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(s => s.ID)
    <div class="form-group">

        @Html.LabelFor(s => s.Number)
        @Html.TextBoxFor(s => s.Number, new { @class = "form-controller" })
        @Html.ValidationMessageFor(s => s.Number)
    </div>
    <div class="form-group">

        @Html.LabelFor(s => s.Cost)
        @Html.TextBoxFor(s => s.Cost, new { @class = "form-controller" })
        @Html.ValidationMessageFor(s=> s.Cost)
    </div>


    <div class="form-group">

        @Html.LabelFor(s=> s.SeetType)
        @Html.DropDownListFor(s => s.SeetType, new SelectList(Enum.GetValues(typeof(projectMVC.enums.SeetType))), new { @class = "form-controller" })
        @Html.ValidationMessageFor(s => s.SeetType)
    </div>
    <button type="submit"> Edit Seets </button>

}